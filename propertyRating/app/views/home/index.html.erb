<title>Property World</title>
<link href="style.css" rel="stylesheet">
<div class="splash">
  <div class="sec1">
    <header>
      <h1>Welcome to Property World</h1>
    </header>
    <!--These are the buttons from the splash page we are taking out for demos until they work.
        There is CSS for this div#hmenu that is also commented out.
    <div id="hmenu">
      <ul>
        <li><a href="signup.html">Rate Property</a></li>
        <li><a href="landLordSU.html">I'm a landlord</a></li>
      </ul>  
    </div> -->
      <%= form_tag(properties_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Properties" %>
        <%= submit_tag "Search" %>
      <% end %>
      <div class="latest">
        <h3>Most Recently Reviewed Properties</h3>
        <table>
          <thead>
            <tr>
              <th>Address</th>
              <th>Average Rating</th>
            </tr>
          </thead>  
          <tbody>
            <% @properties.each do |property|%>
              
              <tr>
                <td><%= link_to property.full_address, property %></td>
                <td><span id="avg_rating"><%=property.average_rating.round(2)%></span>
                  <% (1 .. property.average_rating).each do%>  
                  <%= image_tag("star_on.png", :alt => "gold star", :class => "star") %>
                  <%end%>
                  <% if (property.average_rating > property.average_rating.floor && property.average_rating < property.average_rating.ceil) %>
                      <%= image_tag("half_star_on.png", :alt => "Half gold star", :class =>"star") %>
                    <%end%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div> <!-- end of "latest" -->
  </div>  <!-- end of "sec1" -->
</div>  <!-- end of "splash" -->